{
  "compilerOptions": {
    "target" : "es6",
    "module": "commonjs",
    "jsx" : "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$component/*": ["front/component/*"],
      "$lib/*": ["front/lib/*"],
      "$view/*": ["front/view/*"]
    }
  },
  "include": [
    "front/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}